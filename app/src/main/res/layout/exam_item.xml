<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/examTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Title"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/examDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/examTitle"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="description"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/examDatumLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/examDescription"
        android:layout_alignStart="@+id/examDescription"
        android:layout_below="@+id/examDescription"
        android:layout_marginTop="5dp"
        android:text="@string/datum"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/examSubjectLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/examDatumLabel"
        android:layout_alignStart="@+id/examDatumLabel"
        android:layout_below="@+id/examDatumLabel"
        android:layout_marginTop="3dp"
        android:text="@string/subject"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/examGroupLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/examSubjectLabel"
        android:layout_alignStart="@+id/examSubjectLabel"
        android:layout_below="@+id/examSubjectLabel"
        android:layout_marginTop="3dp"
        android:text="@string/group"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/examDatum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/examDatumLabel"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/examDescription"
        android:layout_toRightOf="@+id/examDatumLabel"
        android:text="1. 9. 2009"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/examSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/examDatum"
        android:layout_alignStart="@+id/examDatum"
        android:layout_alignTop="@+id/examSubjectLabel"
        android:layout_toEndOf="@+id/examDescription"
        android:text="MA"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/examGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/examSubject"
        android:layout_alignStart="@+id/examSubject"
        android:layout_alignTop="@+id/examGroupLabel"
        android:layout_toEndOf="@+id/examDescription"
        android:text="první"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/examAdditionalInfoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/examGroupLabel"
        android:layout_alignStart="@+id/examGroupLabel"
        android:layout_below="@+id/examGroupLabel"
        android:layout_marginTop="3dp"
        android:text="@string/additional_info"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/examAdditionalInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/examAdditionalInfoLabel"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/examAdditionalInfoLabel"
        android:layout_toRightOf="@+id/examAdditionalInfoLabel"
        android:text="žádné"
        android:textAppearance="?android:attr/textAppearanceSmall" />
</RelativeLayout>